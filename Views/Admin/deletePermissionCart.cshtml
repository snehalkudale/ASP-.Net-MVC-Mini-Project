@model Cart
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px">Are You Sure Want to Delete This Cart?</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @*  <img src="@("~/customer_images"+Model.customer_image)" asp-append-version="true" height="250px" width="250px" class="my-3" /> *@
        <ul class="list-group">
            <li class="list-group-item">Cart Id : @Model.cart_id</li>
            <li class="list-group-item">Product Name : @Model.prod_id</li>
            <li class="list-group-item">Customer Name : @Model.cust_id</li>
            <li class="list-group-item">Product Quantity : @Model.product_quantity/li>
            <li class="list-group-item">Cart Status : @Model.cart_status</li>
            
        </ul>
        <a href="@Url.Action("deleteCart","Admin",new{id=Model.cart_id})" class="btn btn-danger">Delete Cart</a>
        <a href="@Url.Action("fetchCart","Admin")" class="btn btn-warning">Back to List</a>
    </div>
    <div class="col-md-2"></div>
</div>

